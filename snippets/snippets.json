"ARM Template": {
    "prefix": "arm",
    "body": [
        "{",
        "    \"$schema\": \"https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#\",",
        "    \"contentVersion\": \"1.0.0.0\",",
        "    \"parameters\": {$1},",
        "    \"variables\": {$2},",
        "    \"resources\": [$3],",
        "    \"outputs\": {$4}",
        "}"
    ],
    "description": "base structure for an ARM template"
},
"ARM Template Parameter": {
    "prefix": "arm-param",
    "body": [
        "\"param1\": {",
        "    \"allowedValues\": [",
        "        \"$1\",",
        "        \"$2\",",
        "    ],",
        "    \"defaultValue\": \"$3\",",
        "    \"type\": \"string\",",
        "    \"metadata\": {",
        "        \"description\": \"$4\"",
        "    },",
        "    \"minLength\": 5,",
        "    \"maxLength\": 10,",
        "    \"minValue\": 5,",
        "    \"maxValue\": 10",
        "}"
    ],
    "description": "sub-structure for a template parameter"
},
"Virtual Machine": {
    "prefix": "arm-vm",
    "body": [
        "{",
        "    \"apiVersion\": \"2015-06-15\",",
        "    \"type\": \"Microsoft.Compute/virtualMachines\",",
        "    \"name\": \"${vmName}\",",
        "    \"location\": \"[resourceGroup().location]\",",
        "    \"dependsOn\": [",
        "    ],",
        "    \"tags\": {",
        "        \"displayName\": \"${vmName}\"",
        "    },",
        "    \"properties\": {",
        "        \"hardwareProfile\": {",
        "            \"vmSize\": \"Standard_D1\"",
        "        },",
        "        \"osProfile\": {",
        "            \"computerName\": \"${vmName}\",",
        "            \"adminUsername\": \"${username}\",",
        "            \"adminPassword\": \"${password}\"",
        "        },",
        "        \"storageProfile\": {",
        "            \"imageReference\": {",
        "                \"publisher\": \"Canonical\",",
        "                \"offer\": \"UbuntuServer\",",
        "                \"sku\": \"16.04\",",
        "                \"version\": \"latest\"",
        "            },",
        "            \"osDisk\": {",
        "                \"name\": \"${vmName}-osdisk\",",
        "                \"vhd\": {",
        "                    \"uri\": \"[concat('http://', toLower('${storageaccount}'), '.blob.core.windows.net/vhds/${vmName}-osdisk.vhd\"",
        "                },",
        "                \"caching\": \"ReadWrite\",",
        "                \"createOption\": \"FromImage\"",
        "            }",
        "        },",
        "        \"networkProfile\": {",
        "            \"networkInterfaces\": [",
        "                    \"id\": \"[resourceId('Microsoft.Network/networkInterfaces', '${nicName}')]\"",
        "            ]",
        "        }",
        "    }",
        "}"
    ],
    "description": "Virtual Machine"
},
"Network Interface": {
    "prefix": "arm-nic",
    "body": [
        "{",
        "    \"apiVersion\": \"2015-06-15\",",
        "    \"type\": \"Microsoft.Network/networkInterfaces\",",
        "    \"name\": \"${nicName}\",",
        "    \"location\": \"[resourceGroup().location]\",",
        "    \"tags\": {",
        "        \"displayName\": \"${nicName}\"",
        "    },",
        "    \"dependsOn\": [",
        "    ],",
        "    \"properties\": {",
        "        \"ipConfigurations\": [",
        "            {",
        "                \"name\": \"ipconfig1\",",
        "                \"properties\": {",
        "                    \"privateIPAllocationMethod\": \"Dynamic\",",
        "                    \"subnet\": {",
        "                        \"id\": \"[concat(resourceId('Microsoft.Network/virtualNetworks', '${vnet}'), '/subnets/${subnet}')]\"",
        "                    }",
        "                }",
        "            }",
        "        ]",
        "    }",
        "}"
    ],
    "description": "Network Interface"
}